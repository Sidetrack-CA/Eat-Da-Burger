{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">

    <div class="jumbotron">
        <h1 id="header1">Burger Designer</h1>
        <p id="header1">Design a burger name and then CHOMP it</p>
        <br>
        <h2 id="header1">Enter Burger Name:</h2>
        <panel>
            {{!-- Create the form and then submit it to DB --}}
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="header1"></label>
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-primary" id="addburger">Name My Burger</span></button>
                </div>
            </form>
        </panel>
    </div>

    <div class="row">
        {{!-- Show names Burgers in bootstrap column --}}
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>Currently Named Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-warning" id ="chompbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Chomp Burger</button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        {{!-- Display CHOMPED burgers in bootstrap column --}}
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>These Burgers Have Been Chomped!</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong>{{this.burger_name}} </strong></span>
                                <button type="button" class="trashburger btn btn-danger" id ="removebutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Remove</button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->

</div><!-- /container -->